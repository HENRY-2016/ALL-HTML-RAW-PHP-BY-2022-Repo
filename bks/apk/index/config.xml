

<?xml version='1.0' encoding='utf-8'?>

<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id = "com.bks.admin" version = "1.0.0">
    <name>bks </name>
    <description>Bks Admin App </description>

    <author email="jacob2016henry@gmail.com" href="http://www.sample.web">Jacob Henry</author>
    <content src="index.html" />

    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="19"/>

    <!-- use latest version of phonegap...this version is displayed in the phonegap web -->
    <preference name="phonegap-version" value="cli-6.5.0" />


    <allow-navigation href="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />

<platform name="android">
    <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application">
        <application android:usesCleartextTraffic="true" />
    </edit-config>
</platform>


    <!-- =========================================== -->

        <!-- Allow images, xhrs, etc. to google.com -->
        <!-- Enable requests to content: URLs -->
        <access origin="content:///*" />

        <!-- Don't block any requests -->
        <access origin="*" />
    <!-- =========================================== -->

    <icon src="www/static/img/icone.png" />
    <plugin name="cordova-plugin-whitelist" />
</widget>
